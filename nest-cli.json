{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include":  "module/common/mail/templates/**/*", "watchAssets":  true},
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "**/*.proto", "watchAssets": true }
    ]
  }
}
